{
  "name": "imips-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "ts-node src/scripts/seedDatabase.ts",
    "seed:reset": "rm -f database.sqlite && npm run seed",
